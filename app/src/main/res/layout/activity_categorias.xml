<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fondo_degradado" >


<ImageView
        android:id="@+id/imageView3"
        android:layout_width="231dp"
        android:layout_height="212dp"
        app:srcCompat="@drawable/ecorecicla_6"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <ImageButton
            android:id="@+id/IButtoncategory"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/categoria"
            android:contentDescription="Iconcategory"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categorías"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="222dp"
        android:layout_height="50dp"
        android:text="Selecciona el tipo de material que desees reciclar"
        android:textAlignment="center"
        android:textStyle="bold"
         />

    <Button
        android:id="@+id/buttonplastico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#69AF42"
        android:text="Plástico"
        />

    <Button
        android:id="@+id/buttonvidrio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#69AF42"
        android:text="Vidrio" />
    <Button
        android:id="@+id/buttoncarton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#69AF42"
        android:text="Papel y Cartón"
        />
    <Button
        android:id="@+id/buttonmetal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#69AF42"
        android:text="Metales"
        />

    <ImageButton
        android:id="@+id/buttonBack2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back Button"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/regresar" />

</LinearLayout>